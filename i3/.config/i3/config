set $mmd Mod4

set $fm eDP
set $sm HDMI-A-1-0

set $pc #ffffff
set $sc #636250

include ~/.config/i3/workspace.conf

# picom
exec_always --no-startup-id ~/.config/i3/scripts/launch-picom.sh

# # Monitor setup
# Monitor setup
