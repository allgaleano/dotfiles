
[colors]
background = #000000
background-alt = #00242b
foreground = #ffffff
primary = #39cfed
secondary = #8ABEB7
alert = #A54242
disabled = #707880

[bar/laptop]
monitor = eDP
width = 100%
height = 18pt
; radius = 6

dpi = 96

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2pt

; border-size = 4pt
; border-color = #00000000

padding-left = 1
padding-right = 1

module-margin = 1

; separator = |
; separator-foreground = ${colors.disabled}

font-0 = Meslo LGM Nerd Font:size=10;2
font-1 = FiraCode Nerd Font:size=10;2

modules-left = arch-logo xworkspaces xwindow
modules-right = battery backlight pulseaudio memory cpu wlan date

cursor-click = pointer
cursor-scroll = ns-resize

bottom = true

enable-ipc = true

; wm-restack = generic
; wm-restack = bspwm
wm-restack = i3

override-redirect = false


[bar/top_monitor]
monitor = HDMI-A-1-0
width = 100%
height = 18pt
; radius = 6

dpi = 96

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2pt

; border-size = 4pt
; border-color = #00000000

padding-left = 1
padding-right = 1

module-margin = 1

; separator = |
; separator-foreground = ${colors.disabled}

font-0 = Meslo LGM Nerd Font:size=10;2

modules-left = arch-logo xworkspaces xwindow
modules-right = battery pulseaudio memory cpu wlan date

cursor-click = pointer
cursor-scroll = ns-resize

; bottom = true

enable-ipc = true

wm-restack = i3

override-redirect = false

[module/arch-logo]
type = custom/text

format = <label>
label = 󰣇
format-foreground = ${colors.primary}

[module/xworkspaces]
type = internal/xworkspaces

; pin-workspaces = true

label-active = %name%
label-active-font = 0
label-active-background = ${colors.background-alt}
label-active-underline= ${colors.primary}
label-active-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow

format = <label>
label = %class%
label-maxlen = 50

[module/battery]
type = internal/battery
battery = BAT1
adapter = ADP1
full-at = 95

format-charging = <label-charging>
format-charging-prefix = "󰂄 "
format-charging-prefix-foreground = ${colors.primary}

format-discharging = <ramp-capacity> <label-discharging>

format-full = <label-full>
format-full-prefix = "󰁹 "
format-full-prefix-foreground = ${colors.primary}

ramp-capacity-0 = "󰁺"
ramp-capacity-1 = "󰁼"
ramp-capacity-2 = "󰁿"
ramp-capacity-3 = "󰂂"
ramp-capacity-0-foreground = ${colors.alert}
ramp-capacity-1-foreground = ${colors.primary}
ramp-capacity-2-foreground = ${colors.primary}
ramp-capacity-3-foreground = ${colors.primary}

[module/pulseaudio]
type = internal/pulseaudio

format-volume-prefix = "  "
format-volume-prefix-foreground = ${colors.primary}
format-volume = <label-volume>

label-volume = %percentage%%

label-muted = "  muted"
label-muted-foreground = ${colors.disabled}

[module/backlight]
type = internal/backlight
backlight = amdgpu_bl2

use-actual-brightness = true

format-label = <label>
format-prefix = "󰖨 "
format-prefix-foreground = ${colors.primary}

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.primary}
label = %percentage_used:2%%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %percentage:2%%

[network-base]
type = internal/network
interval = 5
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-disconnected = %{F#39cfed}%ifname%%{F#707880} disconnected

[module/wlan]
type = internal/network
interface = wlan0
internal = 3.0

format-connected-prefix = "󰖩  "
format-connected-prefix-foreground = ${colors.primary}
format-connected =  %{A1:networkmanager_dmenu:}<label-connected>%{A}
label-connected = %essid%
label-disconnected = "󰖪  "
label-disconnected-foreground = ${colors.alert}

[module/date]
type = internal/date
interval = 1

date = %d-%m-%y
time = %H:%M:%S

format = <label>
format-prefix = "  "
format-prefix-foreground = ${colors.primary}

label = %date% %time%

[settings]
screenchange-reload = true
pseudo-transparency = true

