# Screenshots
bindsym Print exec grim -g "$(slurp)" - | wl-copy
bindsym $mod+Print exec grim -g "$(swaymsg -t get_tree | jq -r '.. | select(.focused?) | .rect | "\(.x),\(.y) \(.width)x\(.height)"')" ~/Media/Pictures/screenshots/$(date +'%s_grim.png')

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

